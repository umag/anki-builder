#!/usr/bin/env bash

# Use nix flakes for the development environment
use flake

# Set up Go environment variables
export GO111MODULE=on
export GOPROXY=https://proxy.golang.org,direct
export GOSUMDB=sum.golang.org

# Project-specific environment variables
export PROJECT_NAME="anki-builder"
export PROJECT_ROOT="$(pwd)"

# Add any custom PATH additions
export PATH="$PROJECT_ROOT:$PATH"

# Load local .env file if it exists (for secrets)
if [ -f .env ]; then
  source .env
fi

echo "âœ… direnv: Nederlands Anki Card Builder environment loaded"
